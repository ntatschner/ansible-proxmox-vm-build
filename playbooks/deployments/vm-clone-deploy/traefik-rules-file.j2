---
http:
  routers:
    {{ VM_name }}-rtr:
      rule: "HostHeader(`{{ VM_name }}.tatux.in`)" 
      entryPoints:
        - https
      middlewares:
        - chain-no-auth
      service: {{ VM_name }}-svc
      tls:
        certResolver: dns-cloudflare
  services:
    {{ VM_name }}-svc:
      loadBalancer:
        passHostHeader: true
        servers:
          - url: "http://{{ _ip_address | join(', ') }}:9090"