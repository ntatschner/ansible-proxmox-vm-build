---
http:
  routers:
    {{ tower_user_id }}-rtr:
      rule: "HostHeader(`{{ tower_user_id }}.tatux.in`)" 
      entryPoints:
        - https
      middlewares:
        - chain-no-auth
      service: {{ tower_user_id }}-svc
      tls:
        certResolver: dns-cloudflare
  services:
    {{ tower_user_id }}-svc:
      loadBalancer:
        passHostHeader: true
        servers:
          - url: "http://{{ _ip_address | join(', ') }}:9090"