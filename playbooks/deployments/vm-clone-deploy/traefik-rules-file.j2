---
http:
  routers:
    "{{ vm_name_nt }}"-rtr:
      rule: "HostHeader(`"{{ vm_name_nt }}".tatux.in`)" 
      entryPoints:
        - https
      middlewares:
        - chain-no-auth
      service: "{{ vm_name_nt }}"-svc
      tls:
        certResolver: dns-cloudflare
  services:
    "{{ vm_name_nt }}"-svc:
      loadBalancer:
        passHostHeader: true
        servers:
          - url: "http://{{ _ip_parse | first }}:80"