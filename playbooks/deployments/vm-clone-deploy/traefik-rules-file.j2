---
http:
  routers:
    "{{ vm_name }}"-rtr:
      rule: "HostHeader(`"{{ vm_name }}".tatux.in`)" 
      entryPoints:
        - https
      middlewares:
        - chain-no-auth
      service: "{{ vm_name }}"-svc
      tls:
        certResolver: dns-cloudflare
  services:
    "{{ vm_name }}"-svc:
      loadBalancer:
        passHostHeader: true
        servers:
          - url: "http://{{ _ip_parse | first }}:9090"