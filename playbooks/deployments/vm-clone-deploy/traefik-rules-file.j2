---
http:
  routers:
    {{ VM_name }}-rtr:
      rule: "HostHeader(`{{ VM_name }}.tatux.in`)" 
      entryPoints:
        - https
      middlewares:
        - chain-no-auth
      service: {{ VM_name }}-svc
      tls:
        certResolver: dns-cloudflare
  services:
    {{ VM_name }}-svc:
      loadBalancer:
        passHostHeader: true
        servers:
          - url: "http://{{ hostvars['192.168.0.250']['_ip_parse'] }}:9090"